<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lb.regev.talk2me"
    android:versionName="1.2"
    android:versionCode="3">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity android:name="com.lb.regev.talk2me.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.lb.regev.talk2me.SignInActivity" />

        <service
            android:name="com.lb.regev.talk2me.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name="com.lb.regev.talk2me.MyFirebaseInstanceIdService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name="com.lb.regev.talk2me.GroupScreen"
            android:label="@string/title_activity_group_screen"
            android:parentActivityName="com.lb.regev.talk2me.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lb.regev.talk2me.MainActivity" />
        </activity>
        <activity
            android:name="com.lb.regev.talk2me.UrLockedActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_ur_locked"
            android:theme="@style/FullscreenTheme"></activity>
    </application>

</manifest>